<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/contact_details_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/margin_10"
        app:cardBackgroundColor="@color/row_list_color"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5">

    <LinearLayout
        android:id="@+id/contact_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/row_list_color"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_14"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/contact_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:text="9198027892"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_12"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/contact_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:text="jack@gmail.com"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_12"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/contact_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:text="Personal Contact"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/business_contact_color"
            android:textSize="@dimen/margin_12"
            android:textStyle="normal" />

    </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="wrap_content"
        android:layout_below="@+id/contact_details_card"
        android:layout_marginTop="3dp"
        android:background="@color/black"
        android:visibility="gone"
        android:layout_height="1dp">

    </View>

</RelativeLayout>